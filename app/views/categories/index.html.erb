<div class="container">
  <p class="text-success"><%= notice %></p>

  <h1 class="mt-4">Categories</h1>

  <div id="categories">
    <% @categories.each do |category| %>
      <div class="card mb-3">
        <div class="card-body">
          <%= render category %>
          <p>
            <%= link_to "Show this category", category, class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= link_to "New category", new_category_path, class: "btn btn-success" %>
  </div>
</div>

