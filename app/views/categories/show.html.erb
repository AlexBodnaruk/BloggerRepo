<div class="container">
  <p class="text-success"><%= notice %></p>

  <%= render @category %>

  <div class="mt-3">
    <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-primary" %> |
    <%= link_to "Back to categories", categories_path, class: "btn btn-secondary" %>

    <%= button_to "Destroy this category", @category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
